<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        //tittle
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="用户注册"
                android:textSize="40sp" />
        </LinearLayout>

        //电话
        <EditText
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:hint="请在此输入手机号："
            android:layout_marginTop="30sp"
            android:id="@+id/edit_PhoneId"/>

        //验证码
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:hint="请在此输入验证码"
                android:id="@+id/edit_Identifying"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:id="@+id/get_Identifying"/>
        </LinearLayout>

        //密码
        <EditText
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:hint="请设置您的密码"
            android:id="@+id/edit_Password"/>
        <EditText
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:hint="请输入您设置的密码"
            android:id="@+id/edit_RePassword"/>
        //条款
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我同意使用条款"
            android:layout_marginTop="40sp"
            android:layout_marginLeft="80sp"
            android:id="@+id/is_agree_clause"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="下一步"
            android:onClick="click"
            android:id="@+id/register_next"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>